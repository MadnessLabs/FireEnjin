{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,  
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ]
}